{
  "name": "edge",
  "version": "0.0.0",
  "description": "api gateway for probolinggo-dev",
  "main": "index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "node build.js",
    "start": "node -r module-alias/register ./dist --env=production",
    "dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, json, graphql",
    "ignore": [
      "src/dist"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/node": "^14.0.14",
    "fs-extra": "^9.0.1",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "tsc": "^1.20150623.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  }
}
